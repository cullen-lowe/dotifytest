<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/library_feed"
    android:layout_height="match_parent"
    android:background="#000"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/user_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Music"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:gravity="left"
            android:textColor="#fff"
            android:background="@drawable/library_category_border"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">
        </LinearLayout>

        <Button
            android:id="@+id/top_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top 40"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:gravity="left"
            android:background="@drawable/library_category_border"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"/>

        <Button
            android:id="@+id/user_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:gravity="left"
            android:textColor="#fff"
            android:background="@drawable/library_category_border"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"></LinearLayout>

        <Button
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:gravity="left"
            android:textColor="#fff"
            android:background="@drawable/library_category_border"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"></LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>